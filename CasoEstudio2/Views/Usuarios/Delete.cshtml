@model CasoEstudio2.Models.Usuario

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<h2>Eliminar Usuario</h2>

<p>¿Estás seguro de que deseas eliminar el usuario @Model.NombreUsuario?</p>

<form method="post">
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a href="@Url.Action("Index", "Usuarios")" class="btn btn-secondary">Cancelar</a>
</form>
