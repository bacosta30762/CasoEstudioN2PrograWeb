@model IEnumerable<CasoEstudio2.Models.Categoria>

<div class="container my-5">
    <h1 class="text-center mb-4">Listado de Categorías</h1>

    <p>
        <a asp-action="Crear" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Crear Nueva Categoría</a>
    </p>

    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Descripcion)</th>
                <th>@Html.DisplayNameFor(model => model.Estado)</th>
                <th>@Html.DisplayNameFor(model => model.FechaRegistro)</th>
                <th>@Html.DisplayNameFor(model => model.UsuarioRegistro)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Id)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Estado)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaRegistro)</td>
                    <td>@Html.DisplayFor(modelItem => item.UsuarioRegistro)</td>
                    <td>
                        <a href="@Url.Action("Editar", new { id = item.Id })" class="btn btn-warning btn-sm"><i class="bi bi-pencil-square"></i></a>
                        <a href="@Url.Action("Eliminar", new { id = item.Id })" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
