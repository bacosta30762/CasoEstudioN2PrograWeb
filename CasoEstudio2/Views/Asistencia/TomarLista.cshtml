@model List<CasoEstudio2.Models.Inscripcion>
@{
    ViewBag.Title = "Tomar Lista";
}

<h2 class="text-center mb-4">Tomar Lista para el Evento: <strong>@ViewBag.EventoTitulo</strong></h2>

<form asp-action="TomarLista" method="post" class="container">
    <input type="hidden" name="eventoId" value="@ViewBag.EventoId" />

    <table class="table table-bordered table-striped">
        <thead class="table-dark">
            <tr>
                <th>Nombre</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inscripcion in Model)
            {
                <tr>
                    <td>@inscripcion.Usuario.NombreCompleto</td>
                    <td>
                        <select class="form-select" name="inscripciones[@Model.IndexOf(inscripcion)].Asistencia.Estado">
                            <option value="Presente">Presente</option>
                            <option value="Ausente">Ausente</option>
                        </select>
                        <input type="hidden" name="inscripciones[@Model.IndexOf(inscripcion)].InscripcionId" value="@inscripcion.InscripcionId" />
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-center mt-4">
        <button type="submit" class="btn btn-primary">Guardar</button>
    </div>
</form>
